<Window x:Class="SuppLocals.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuppLocals"
        xmlns:viewModels="clr-namespace:SuppLocals.ViewModels"
        xmlns:views="clr-namespace:SuppLocals.Views.AccountViews"
        mc:Ignorable="d"
        Title="Login" Height="500" Width="400"
        AllowsTransparency="true" Background="White"
        WindowStyle="none" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        >


    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:LoginVM}">
            <views:LoginView/>
        </DataTemplate>
    </Window.Resources>

    <Window.DataContext>
        <viewModels:MainLoginWindowVM/>
    </Window.DataContext>

    <Grid>
        <ContentControl Content="{Binding CurrentView}"/>
    </Grid>
    
</Window>
