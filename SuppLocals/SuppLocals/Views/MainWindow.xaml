<Window x:Class="SuppLocals.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tabsmodel="clr-namespace:SuppLocals.TabsModel"
        xmlns:tabs="clr-namespace:SuppLocals.Tabs"
        xmlns:local="clr-namespace:SuppLocals"
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
        mc:Ignorable="d"
        Height="450" Width="800" Background="#CCBA8B"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <DataTemplate x:Name="HomeTemplate" DataType="{x:Type tabsmodel:HomeModel}">
            <tabs:Home DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="VendorsTemplate" DataType="{x:Type tabsmodel:VendorsModel}">
            <tabs:Vendors DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="JoinTemplate" DataType="{x:Type tabsmodel:JoinModel}">
            <tabs:Join DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="AboutTemplate" DataType="{x:Type tabsmodel:AboutModel}">
            <tabs:About DataContext="{Binding}"/>
        </DataTemplate>                      
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="70"/>
            <RowDefinition/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>
        
        <!--Place for a hyperlink to this site: https://lrv.lt/en-->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="7" Background="WhiteSmoke" Grid.ZIndex="1" Height="50">
            <StackPanel.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="0,0,0,-20" DecelerationRatio=".9" Duration="0:0:1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,-20" To="0,0,0,0" AccelerationRatio=".9" Duration="0:0:1" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </StackPanel.Triggers>

            <TextBlock Margin="0 10 0 0" Text="All the information related to COVID-19 regulations. " HorizontalAlignment="Center" FontSize="13">
           <Hyperlink Foreground="Black" NavigateUri="https://lrv.lt/en" RequestNavigate="HyperlinkRequestNavigate">Read More</Hyperlink>
            </TextBlock>
        </StackPanel>


        <StackPanel Grid.Row="1" Grid.Column="1">
            <Image Source="/Assets/title2.png" Width="120" Height ="60" HorizontalAlignment="Left" Visibility="Visible" Margin="0 5 0 5"/>
        </StackPanel>

        <Grid Height="70" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" HorizontalAlignment="Right" Margin="0 0 10 0">
            <StackPanel Orientation="Horizontal">
                <Button Uid="0" Width="95" Content="HOME" Height="40" HorizontalContentAlignment="Center" Background="{x:Null}" FontSize="17" BorderBrush="{x:Null}" Click="TabClicked"/>
                <Button Uid="1" Width="95" Content="VENDORS" Height="40" HorizontalContentAlignment="Center" Background="{x:Null}" FontSize="17" BorderBrush="{x:Null}" Click="TabClicked"/>
                <Button Uid="2" Width="95" Content="JOIN" Height="40" HorizontalContentAlignment="Center" Background="{x:Null}" FontSize="17" BorderBrush="{x:Null}" Click="TabClicked"/>
                <Button Uid="3" Width="95" Content="ABOUT" Height="40"  HorizontalContentAlignment="Center" Background="{x:Null}" FontSize="17" BorderBrush="{x:Null}" Click="TabClicked"/>
                <Image Source="/Assets/profile.png" Width="30" HorizontalAlignment="Left" Visibility="Visible" Margin="25 5 0 5"/>
            </StackPanel>
            <Grid x:Name="TabCursor" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0 0 0 10"  Width="95" Height="3" Background="Black">
                <Grid.RenderTransform>
                    <TranslateTransform />
                </Grid.RenderTransform>
            </Grid>
        </Grid>
        <!--Menu-->
        <ScrollViewer x:Name="sPan" Grid.Column="4" Grid.Row="2" Grid.ZIndex="2" Grid.RowSpan="2" MinWidth="200" Margin="6,0,4,0" Visibility="Collapsed" Background="#CCBA8B">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Vertical">

                    <TextBlock Text="|Menu|" FontSize="30" HorizontalAlignment="Center" Margin="0 30 0 50"/>

                    <Button Width="150" Height="30" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Vendors" Click="ServicesClick">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <!--Create PushPins-->
                    <!--Services list-->
                    <StackPanel Name="servicePanel" Grid.Column="1" Grid.Row="1" MinWidth="150" Orientation="Vertical" Margin="5 0 5 10" Visibility="Collapsed">
                        <TextBlock Text="Vendor type" Padding="5" HorizontalAlignment="Center" />
                        <ComboBox x:Name="createServiceCB"/>

                        <TextBlock Text="Address" Padding="5" HorizontalAlignment="Center" />
                        <TextBox x:Name="addressTextBox" Height="20" TextWrapping="NoWrap" KeyUp="AddressTextBox_Changed"
                             GotFocus="AddressTextBox_GotFocus" LostFocus="AddressTextBox_LostFocus"/>

                        <ScrollViewer x:Name="addressSuggest" Width="{Binding ElementName=addressTextBox, Path=ActualWidth}"
                            Visibility="Collapsed" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <StackPanel Name="resultStack"></StackPanel>
                        </ScrollViewer>

                        <Button x:Name="confirmBtn" Click="AddPushPin" Content="Confirm"/>
                    </StackPanel>


                    <Button Width="150" Height="30" FontSize="16" VerticalAlignment="Center" Content="Filters" HorizontalAlignment="Center"  Click="FilterClick"/>


                    <!--Filters-->

                    <StackPanel Name="filterPanel" Grid.Column="1" Grid.Row="4" MinWidth="150" Orientation="Vertical" Margin="5 0 5 10" Visibility="Collapsed">
                        <TextBlock Text="Filter:" Padding="5" HorizontalAlignment="Center" />
                        <ComboBox x:Name="filterServiceTypeCB" SelectionChanged="UpdateServiceListAndMap"/>
                        <CheckBox x:Name="filterDistanceCheck" Margin="0 10 0 0" Content="Filter by distance" Checked="DistanceFilterChecked" Unchecked="DistanceFilterUnchecked" />
                        <StackPanel x:Name="distanceFilterPanel" Margin="0 10 0 0" Visibility="Hidden">
                            <TextBox TextAlignment="Center" Text="{Binding ElementName=radiusSlider , Path=Value, StringFormat=N2 }"/>
                            <Slider x:Name="radiusSlider" Minimum="0" Maximum="20" Value="10" ValueChanged="RadiusSlider_ValueChanged" Cursor="Hand" TickPlacement="None"/>
                            <DockPanel>
                                <TextBlock TextAlignment="Left" Text="{Binding ElementName=radiusSlider , Path=Minimum}"> km.</TextBlock>
                                <TextBlock TextAlignment="Right" Text="{Binding ElementName=radiusSlider , Path=Maximum}"> km.</TextBlock>
                            </DockPanel>
                        </StackPanel>
                    </StackPanel>
                    
                    
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <Button Grid.Row="2" Grid.Column="4" VerticalAlignment="Top" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Width="70" Height="30" FontSize="16" HorizontalAlignment="Right"  Background ="Transparent" Panel.ZIndex="2" Click="ButtonClick" Foreground="Black" RenderTransformOrigin="0.5,0.5">☰ Filters
            <Button.LayoutTransform>
                <RotateTransform Angle="90"/>
            </Button.LayoutTransform>
        </Button>
        
        


        <ListBox Visibility="Hidden" x:Name="servicesLB" Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" MinWidth="150" Margin="0 0 10 0"
                 SelectionMode="Single" SelectionChanged="SelectedServiceLB_Changed">
        </ListBox>
        <!--Map-->
        <m:Map  Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="2" 
            x:Name="myMap" Mode="Road" Center="54.68,25.27" ZoomLevel="12">

            <m:MapLayer x:Name="RouteLayer" HorizontalAlignment="Right" Width="745"/>
        </m:Map>

        <!--Selected Service-->
        <Grid x:Name="selectedServiceInfoGrid" Grid.Column="3" Grid.Row="2" Visibility="Collapsed" Panel.ZIndex="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="5"/>
                <RowDefinition Height="2*"/>
                <!--Title-->
                <RowDefinition Height="8*"/>
                <!--About-->
                <RowDefinition Height="*"/>
                <!--Refs-->
                <RowDefinition Height="5"/>
            </Grid.RowDefinitions>


            <TextBlock x:Name="selectedServiceTitle" Grid.Column="1" Grid.Row="1"
                       TextAlignment="Center" TextWrapping="Wrap"/>
            <ScrollViewer  Grid.Column="1" Grid.Row="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="selectedServiceAbout"
                           TextAlignment="Center" TextWrapping="Wrap"/>
            </ScrollViewer>

            <UniformGrid Grid.Column="1" Grid.Row="3" Rows="1">
                <Button Click="Hide_BtnClick">
                    <Image Height="auto" Width="auto"  Source="/Assets/backArrow.png"/>
                </Button>
                <Button x:Name="findRoute_Btn" Click="FindRoute_BtnClick">
                    <Image Height="auto" Width="auto"  Source="/Assets/destination.png"/>
                </Button>
                <Button x:Name="review_Btn" Click="Review_BtnClick">
                    <Image Height="auto" Width="auto"  Source="/Assets/review.png"/>
                </Button>
            </UniformGrid>


        </Grid>

        <ContentControl Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Content="{Binding}"/>
    </Grid>
</Window>