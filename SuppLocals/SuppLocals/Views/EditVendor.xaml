        <Label Content="Title:" HorizontalAlignment="Left" Margin="13,78,0,0" VerticalAlignment="Top" FontSize="20" Grid.Column="1" Height="37" Width="61"/>
        <Label Content="About:" HorizontalAlignment="Left" Margin="10,174,0,0" VerticalAlignment="Top" FontSize="20" Grid.Column="1" Height="36" Width="75"/>

    </Grid>
</Window>
