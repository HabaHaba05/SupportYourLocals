        <TextBox Background="#B59A56" HorizontalAlignment="Left" Margin="161,70,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" Name="titleBox" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" Height="52" Grid.Column="1"/>
