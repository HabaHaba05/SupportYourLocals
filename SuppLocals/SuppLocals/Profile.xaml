<Window x:Class="SuppLocals.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuppLocals"
        mc:Ignorable="d"
        Title="Profile" Height="500" Width="398">
    <Grid Width="400" Height="500">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox IsReadOnly="True" x:Name="UsernameBox" Margin="215,196,65,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="EditProfileBtn" Content="Edit profile" HorizontalAlignment="Left" Margin="46,428,0,0" VerticalAlignment="Top" Click="EditProfileBtn_Click" RenderTransformOrigin="0.426,2.695"/>
        <Button x:Name="BrowseButton" Content="Change photo" HorizontalAlignment="Left" Margin="245,366,0,0" VerticalAlignment="Top" Click="BrowseButton_Click" RenderTransformOrigin="0.506,3.044"/>
        <Ellipse x:Name="Elipse" HorizontalAlignment="Center" Height="158" Margin="0,9,0,0" Stroke="Black" VerticalAlignment="Top" Width="158">
            <Ellipse.Fill>
                <ImageBrush ImageSource="/download.png"/>
            </Ellipse.Fill>
        </Ellipse>
        <Label Content="Username" HorizontalAlignment="Left" Margin="47,192,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.953,0.456"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="47,232,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.305,0.549"/>
        <Label Content="Last name" HorizontalAlignment="Left" Margin="47,273,0,0" VerticalAlignment="Top"/>
        <Label Content="Adress" HorizontalAlignment="Left" Margin="47,312,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NameBox" IsReadOnly="True" HorizontalAlignment="Left" Margin="215,236,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="LastNameBox" IsReadOnly="True" HorizontalAlignment="Left" Margin="215,273,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="AdressBox" IsReadOnly="True" HorizontalAlignment="Left" Margin="215,312,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="mapBtn" Content="Map" HorizontalAlignment="Center" Margin="0,403,0,0" VerticalAlignment="Top" Click="mapBtn_Click" RenderTransformOrigin="-0.467,0.69"/>
        <Button x:Name="ChangePasswordBtn" Content="Change password" HorizontalAlignment="Left" Margin="46,366,0,0" VerticalAlignment="Top" Click="ChangePasswordBtn_Click"/>
        <Button x:Name="LogOutBtn" Content="Log out" HorizontalAlignment="Left" Margin="284,428,0,0" VerticalAlignment="Top" Click="LogOutBtn_Click"/>
    </Grid>
</Window>
